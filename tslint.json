{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "lib/*",
      "es/*"
    ]
  },
  "rules": {
    "no-console": false,
    "max-classes-per-file": [
      true,
      5,
      "exclude-class-expressions"
    ],
    "object-literal-sort-keys": false
  }
}